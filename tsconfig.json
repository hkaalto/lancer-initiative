{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "./dist/",
    "module": "es6",
    "sourceMap": true,
    "lib": ["ES6", "ES2017", "DOM"],
    "types": [],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "include": [
      "src/**/*.ts"
  ]
}
